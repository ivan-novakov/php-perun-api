{
    "name" : "ivan-novakov/php-perun-api",
    "description" : "A PHP client library to consume Perun REST API",
    "type" : "library",
    "keywords" : [
        "perun", "rest", "php", "api"
    ],
    "homepage" : "https://github.com/ivan-novakov/php-perun-api",
    "license" : "BSD-3-Clause",
    "authors" : [
        {
            "name" : "Ivan Novakov",
            "homepage" : "http://novakov.cz"
        }
    ],

    "require" : {
        "php" : ">=5.3.3",
        "zendframework/zend-stdlib" : "~2.2",
        "zendframework/zend-http" : "~2.2",
        "zendframework/zend-json" : "~2.2",
        "zendframework/zend-console" : "~2.2"
    },
    
    "require-dev": {
        "phpunit/PHPUnit": "~3.7"
    },
    
    "autoload" : {
        "psr-0" : {
            "InoPerunApi\\" : "src/"
        }
    },
    "bin" : [
        "bin/perun-client.php"
    ]
}